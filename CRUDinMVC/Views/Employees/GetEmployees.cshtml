@model IEnumerable<CRUDinMVC.Application.RRModels.EmployeeResponse>

@{
    ViewData["Title"] = "GetEmployees";
}

<h1>GetEmployees</h1>

@{
    if (ViewBag.Success != null)
    {
        <div>@ViewBag.Success</div>
    }
    else if (ViewBag.Error != null)
    {
        <div>@ViewBag.Error</div>
    }
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <a asp-controller="Employees" class="btn btn-info" asp-action="UpdateEmployee" asp-route-id="@item.Id">Edit</a>
                    <a asp-controller="Employees" class="btn btn-danger" asp-action="DeleteEmployee" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
